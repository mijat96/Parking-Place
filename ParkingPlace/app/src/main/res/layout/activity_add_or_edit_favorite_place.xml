<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actvities.AddOrEditFavoritePlaceActivity"
    android:background="@color/colorNorthPanelBackground">

    <EditText
        android:id="@+id/favoritePlaceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_marginTop="50dp"
        android:inputType="text"/>

    <Spinner
        android:id="@+id/favoritePlaceType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/selectedLocationTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOT SELECTED"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_for_selected_location"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select location..."
        android:onClick="clickOnBtnSelectLocation"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:onClick="clickOnBtnSave"/>
</LinearLayout>