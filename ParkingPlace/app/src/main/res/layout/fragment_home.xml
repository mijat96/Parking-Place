<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/parent"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF">

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_ver"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent=".5" />

<androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_hor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent=".5" />

<Button
    android:id="@+id/mapPageBtn"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="4dp"
    android:textColor="@android:color/white"
    android:textAlignment="center"
    android:textSize="40dp"
    android:selectAllOnFocus="true"
    android:background="@drawable/map"
    app:layout_constraintBottom_toTopOf="@+id/guideline_hor"
    app:layout_constraintDimensionRatio="w,1:1.5"
    app:layout_constraintHeight_default="percent"
    app:layout_constraintHeight_percent=".5"
    app:layout_constraintRight_toLeftOf="@+id/guideline_ver"
    app:layout_constraintTop_toTopOf="parent"/>
    <!--android:text="@string/mapPageBtnTxt"-->

<Button
    android:id="@+id/reservationAndPaidParkingPlacesBtn"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="4dp"
    android:background="@drawable/reservation"
    android:textColor="@color/home_page_text_color"
    android:textAlignment="textEnd"
    android:textSize="30dp"
    app:layout_constraintBottom_toTopOf="@+id/guideline_hor"
    app:layout_constraintDimensionRatio="w,1:1.5"
    app:layout_constraintHeight_default="percent"
    app:layout_constraintHeight_percent=".5"
    app:layout_constraintLeft_toRightOf="@+id/guideline_ver"
    app:layout_constraintTop_toTopOf="parent"/>
    <!--android:text="@string/reservationAndPaidParkingPlacesBtnTxt"-->

<Button
    android:id="@+id/favoritePlacesBtn"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="4dp"
    android:textColor="@android:color/white"
    android:textAlignment="center"
    android:textSize="40dp"
    android:background="@drawable/favorite_places"
    app:layout_constraintDimensionRatio="w,1:1.5"
    app:layout_constraintHeight_default="percent"
    app:layout_constraintHeight_percent=".5"
    app:layout_constraintRight_toLeftOf="@+id/guideline_ver"
    app:layout_constraintTop_toBottomOf="@+id/guideline_hor"
    app:layout_constraintBottom_toBottomOf="parent"/>
    <!--android:text="@string/favoritePlacesBtnTxt"-->

<Button
    android:id="@+id/registerUserBtn"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_margin="4dp"
    android:textColor="@android:color/white"
    android:textAlignment="center"
    android:textSize="40dp"
    android:background="@drawable/registration"
    app:layout_constraintDimensionRatio="w,1:1.5"
    app:layout_constraintHeight_default="percent"
    app:layout_constraintHeight_percent=".5"
    app:layout_constraintLeft_toRightOf="@+id/guideline_ver"
    app:layout_constraintTop_toBottomOf="@+id/guideline_hor"
    app:layout_constraintBottom_toBottomOf="parent"/>
    <!--android:text="@string/registerUserBtnTxt"-->

</androidx.constraintlayout.widget.ConstraintLayout>